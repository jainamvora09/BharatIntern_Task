<div class="from-group">
    <label for="title">Title</label>
    <input required value="<%=article.title%>" type="text" name="title" class="form-control">
</div>
<div class="from-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" rows="5" class="form-control"><%=article.description%></textarea>
</div>
<div class="from-group">
    <label for="markdown">Mark Down</label>
    <textarea required name="markdown" id="markdown" rows="10" class="form-control"><%=article.markdown%></textarea>
</div>
<br>
<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>